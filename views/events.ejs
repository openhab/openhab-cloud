<% section = 'events' %>
<%- include ('header.ejs') %>
<!-- page content -->
<section id="content" class="sidebar">
    <header class="headerPage">
        <div class="container clearfix">
            <div class="row">
                <h1 class="span8">Events</h1>
                <div class="span4" id="navTrail"> <a href="/" class="homeLink">home</a><span>/</span>Events</div>
            </div>
        </div>
    </header>
    <div class="slice clearfix">
        <div class="container">
            <%- include ('alerts.ejs') %>
            <div class="row">
                <aside class="span3" id="sidebar">
                    <nav id="subnav">
                        <ul>
                            <li class="active"><a href="/events">All</a></li>
                            <li ><a href="">Today</a></li>
                            <li ><a href="">Last week</a></li>
                        </ul>
                        <div class="littleShadow"></div>
                    </nav>
                    <!-- <section id="widgetArea">
                        <div class="widget">
                            <h3> widget 1</h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque ut auctor lorem. Curabitur at lobortis nulla. Sed tincidunt, orci sit amet varius ornare,</p>
                        </div>
                    </section> -->
                </aside>
                <div class="span9">
                    <table class="table table-hover">
                        <thead>
                        <tr><th>When</th><th>Where</th><th>What</th></tr>
                        </thead>
                        <% for (var i=0; i<events.length; i++) { %>
                        <tr bgcolor="<% if (events[i].color == 'good') { %>#e0f0d5<% } else if (events[i].color == 'bad') { %>#f1dede<% } else { %>#daedf8<% } %>"><td><%= date_util(events[i].when, timeZone).toRelativeCalendar() %></td>
                            <td><a href="/events?source=<%=events[i].source%>"><%= events[i].source %></a></td>
                            <td><%= events[i].status %></td>
                        </tr>
                        <% } %>
                    </table>
                    <% if (pages > 5) { pages = 5 } %>
                    <% if (pages > 1) { %>
                    <div class="pagination pagination-centered">
                        <ul>
                            <% if (page > 0) { %><li> <a href="?page=<%= page-1 %><% if (source){%>&source=<%=source%><%}%>"> Prev </a> </li><% } %>
                            <% for (var i=0; i <= pages; i++) { %>
                            <li <% if (i == page) {%>class="active"<%}%>> <a href="?page=<%= i %><% if (source){%>&source=<%=source%><%}%>"><%= i+1 %></a> </li>
                            <% } %>
                            <% if (page < pages) { %><li> <a href="?page=<%= page+1 %><% if (source){%>&source=<%=source%><%}%>"> Next </a> </li><% } %>
                        </ul>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- page content -->
<%- include ('footer.ejs') %>
