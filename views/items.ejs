<% section = 'items' %>
<%- include ('header.ejs') %>
<h1 class="page-header">Items</h1>
<%- include ('alerts.ejs') %>
<div class="row">
    <div class="col-md-3 mb-3">
        <nav class="sidebar-nav">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item"><a class="nav-link<% if (!locals.sort) { %> active<% } %>" href="/items">By name</a></li>
                <li class="nav-item"><a class="nav-link<% if (locals.sort == 'last_update') { %> active<% } %>" href="/items?sort=last_update">By last update</a></li>
                <li class="nav-item"><a class="nav-link<% if (locals.sort == 'status') { %> active<% } %>" href="/items?sort=status">By status</a></li>
            </ul>
        </nav>
    </div>
    <div class="col-md-9">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                <tr><th>Name</th><th>Status</th><th>Last update</th></tr>
                </thead>
                <tbody>
                <% for (let i = 0; i < items.length; i++) { %>
                <tr>
                    <td><a href="/events?source=<%=items[i].name%>"><%= items[i].name %></a></td>
                    <td><%= items[i].status %></td>
                    <td><%= date_util(items[i].last_update, timeZone).toRelativeCalendar() %></td>
                </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include ('footer.ejs') %>
