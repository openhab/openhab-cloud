COMPOSE_PROJECT_NAME=openhab-cloud

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Domain and SSL certificate email
DOMAIN_NAME=<your_domain_name>
EMAIL=<your_email>

# Session encryption key - CHANGE THIS to a long random string
EXPRESS_KEY=<random_secret_string>

# =============================================================================
# DOCKER IMAGE
# =============================================================================

# Docker image tag (default: latest, use "develop" for development builds)
IMAGE_TAG=latest

# =============================================================================
# DATABASE - MongoDB
# =============================================================================

# MONGO_HOST=mongodb
# MONGO_PORT=27017
# MONGO_DB=openhab
# MONGO_USER=
# MONGO_PASSWORD=

# =============================================================================
# CACHE - Redis
# =============================================================================

# REDIS_HOST=redis
# REDIS_PORT=6379
# REDIS_PASSWORD=

# =============================================================================
# EMAIL - SMTP (optional, for notifications)
# =============================================================================

# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=openHAB Cloud <noreply@example.com>

# =============================================================================
# PUSH NOTIFICATIONS - Firebase/FCM (optional, for Android)
# =============================================================================

# FCM_SENDER_ID=
# FCM_SERVICE_FILE=certs/fcm/service-account.json

# =============================================================================
# IFTTT INTEGRATION (optional)
# =============================================================================

# IFTTT_CHANNEL_KEY=
# IFTTT_TEST_TOKEN=

# =============================================================================
# LEGAL PAGES (optional)
# =============================================================================

# LEGAL_TERMS=https://example.com/terms
# LEGAL_POLICY=https://example.com/privacy

# =============================================================================
# APP STORE IDs (optional, defaults to official openHAB apps)
# =============================================================================

# APP_APPLE_ID=492054521
# APP_PLAY_STORE_ID=org.openhab.habdroid

# =============================================================================
# OTHER OPTIONS
# =============================================================================

# Disable registration after initial setup
# REGISTRATION_ENABLED=false

# Logging level: error, warn, info, verbose, debug, silly
# LOG_LEVEL=info

# Morgan HTTP request logging format (off by default; reverse proxy handles access logs)
# MORGAN_FORMAT=combined

# Mute push notifications (for testing)
# MUTE_NOTIFICATIONS=false

# Time before sending offline notification (ms, default 5 minutes)
# OFFLINE_NOTIFICATION_TIME=300000

# Proxy settings (for remote openhab access via subdomain)
# PROXY_HOST=
# PROXY_PORT=3000

# Connection lock time in seconds
# CONNECTION_LOCK_TIME=70
