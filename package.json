{
  "name": "openhabcloud",
  "description": "openHAB cloud service",
  "version": "1.0.10",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "start": "tsx src/app.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint:ts": "tsc --noEmit && echo 'TypeScript: No errors'",
    "test": "mocha --require tsx tests/mocha/unit/**/*.ts --recursive",
    "test:unit": "mocha --require tsx tests/mocha/unit/**/*.ts --recursive",
    "test:coverage": "nyc --reporter=html mocha --require tsx tests/mocha/unit/**/*.ts --recursive",
    "cli:makeadmin": "tsx src/cli/makeadmin.ts",
    "cli:makeinvites": "tsx src/cli/makeinvites.ts",
    "docker:test:up": "docker compose -f docker/docker-compose.test.yml up -d --build",
    "docker:test:down": "docker compose -f docker/docker-compose.test.yml down -v",
    "docker:test:logs": "docker compose -f docker/docker-compose.test.yml logs -f",
    "docker:test:logs:app": "docker compose -f docker/docker-compose.test.yml logs -f openhab-cloud",
    "docker:test:restart": "npm run docker:test:down && npm run docker:test:up",
    "docker:test:seed": "tsx tests/integration/seed-database.ts",
    "test:integration": "mocha --require tsx --timeout 30000 --exit 'tests/integration/**/*.test.ts'",
    "test:integration:socket": "mocha --require tsx --timeout 30000 --exit 'tests/integration/socket/**/*.test.ts'",
    "test:integration:api": "mocha --require tsx --timeout 30000 --exit 'tests/integration/api/**/*.test.ts'",
    "test:integration:pages": "mocha --require tsx --timeout 30000 --exit 'tests/integration/pages/**/*.test.ts'",
    "test:integration:concurrent": "mocha --require tsx --timeout 60000 --exit 'tests/integration/concurrent/**/*.test.ts'",
    "license:check": "tsx scripts/update-license-headers.ts --dry-run",
    "license:update": "tsx scripts/update-license-headers.ts",
    "deps:audit": "npm audit",
    "deps:audit:fix": "npm audit fix",
    "deps:check": "ncu",
    "deps:check:minor": "ncu --target minor",
    "deps:upgrade": "ncu -u",
    "deps:upgrade:minor": "ncu -u --target minor"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.4",
    "connect-flash": "0.1.1",
    "connect-redis": "^8.0.0",
    "cookie-parser": "^1.4.7",
    "cron": "^4.4.0",
    "csurf": "^1.11.0",
    "ejs": "^3.1.10",
    "email-templates": "^13.0.1",
    "errorhandler": "^1.5.2",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "firebase-admin": "^13.6.1",
    "ioredis": "^5.9.3",
    "luxon": "^3.7.2",
    "mongoose": "^8.13.0",
    "morgan": "^1.10.1",
    "nodemailer": "^8.0.1",
    "oauth2orize": "^1.12.0",
    "passport": "0.7.0",
    "passport-http": "0.3.0",
    "passport-http-bearer": "1.0.1",
    "passport-local": "1.0.0",
    "passport-oauth2-client-password": "0.1.2",
    "redis": "^4.7.0",
    "serve-favicon": "^2.5.1",
    "serve-static": "^1.16.3",
    "socket.io": "^4.8.3",
    "underscore": "^1.13.7",
    "uuid": "^11.1.0",
    "winston": "3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/connect-flash": "^0.0.40",
    "@types/cookie-parser": "^1.4.10",
    "@types/csurf": "^1.11.5",
    "@types/email-templates": "^10.0.4",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^5.0.6",
    "@types/express-serve-static-core": "^4.19.8",
    "@types/express-session": "^1.18.2",
    "@types/luxon": "^3.7.1",
    "@types/node": "^25.2.3",
    "@types/oauth2orize": "^1.11.5",
    "@types/passport": "^1.0.17",
    "@types/passport-http": "^0.3.11",
    "@types/passport-http-bearer": "^1.0.42",
    "@types/passport-local": "^1.0.38",
    "@types/passport-oauth2-client-password": "^0.1.6",
    "@types/serve-favicon": "^2.5.7",
    "@types/serve-static": "^2.2.0",
    "@types/ws": "^8.18.1",
    "chai": "^4.5.0",
    "cheerio": "^1.2.0",
    "docker-compose": "^1.3.1",
    "mocha": "^11.7.5",
    "node-gyp": "^12.2.0",
    "npm-check-updates": "^19.3.2",
    "nyc": "^17.1.0",
    "sinon": "^21.0.1",
    "socket.io-client": "2.5.0",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.4",
    "ws": "^8.19.0"
  },
  "overrides": {
    "@types/express-serve-static-core": "^4.19.8"
  }
}
